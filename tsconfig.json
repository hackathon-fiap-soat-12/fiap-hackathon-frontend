{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@/shared/*": ["./src/shared/*"],
      "@/modules/*": ["./src/modules/*"],
      "@/core/*": ["./src/core/*"],
      "@/infra/*": ["./src/infra/*"],
      "@/app/*": ["./src/app/*"],
      "@/assets/*": ["./src/assets/*"]
    },
    "types": ["vite/client", "jest"],
    "lib": ["es2020", "dom"]
  },
  "exclude": ["node_modules", "dist"]
}
